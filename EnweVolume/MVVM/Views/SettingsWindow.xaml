<Window
    x:Class="EnweVolume.MVVM.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EnweVolume.MVVM.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:EnweVolume.MVVM.ViewModels"
    Title="EnweVolume Settings"
    Width="450"
    Height="1100"
    MinWidth="450"
    MinHeight="400"
    d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
    ResizeMode="CanResize"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0,0,0,30" />
        </Style>
    </Window.Resources>
    <ScrollViewer Padding="10,0,20,0" VerticalScrollBarVisibility="Auto">
        <StackPanel Width="400" Margin="0,10">
            <GroupBox Header="Current Volume">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.ColumnSpan="3" Margin="0,10,0,5">
                        <ProgressBar
                            Height="20"
                            Foreground="{Binding VolumeBarColor}"
                            Maximum="100"
                            Minimum="0"
                            Value="{Binding VolumeCurrentValue}" />
                        <Line
                            VerticalAlignment="Center"
                            Stroke="Yellow"
                            StrokeThickness="2"
                            X1="0"
                            X2="0"
                            Y1="0"
                            Y2="20" />
                        <Line
                            VerticalAlignment="Center"
                            Stroke="Red"
                            StrokeThickness="2"
                            X1="0"
                            X2="0"
                            Y1="0"
                            Y2="20" />
                    </Grid>
                    <Grid Grid.Row="1" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Top"
                            Content="0" />
                        <Label
                            Grid.Column="1"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Top"
                            Content="n" />
                        <Label
                            Grid.Column="2"
                            HorizontalContentAlignment="Right"
                            VerticalContentAlignment="Top"
                            Content="100" />
                    </Grid>
                    <CheckBox
                        Grid.Row="2"
                        Grid.ColumnSpan="3"
                        VerticalContentAlignment="Center">
                        <Label Content="Change progress bar color" />
                    </CheckBox>
                </Grid>
            </GroupBox>
            <GroupBox Header="Red Threshold">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--  Volume Threshold  -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.1*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.ColumnSpan="2"
                            HorizontalContentAlignment="Center"
                            Content="Volume Threshold"
                            FontSize="20"
                            FontWeight="DemiBold" />
                        <Label
                            Grid.Row="1"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"
                            Content="99" />
                        <Slider
                            Grid.Row="1"
                            Grid.Column="1"
                            IsSnapToTickEnabled="True"
                            Maximum="100"
                            Minimum="1"
                            TickFrequency="1"
                            TickPlacement="None"
                            Value="75" />
                    </Grid>
                    <!--  Notification  -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.ColumnSpan="3"
                            HorizontalContentAlignment="Center"
                            Content="Notifications"
                            FontSize="20"
                            FontWeight="DemiBold" />
                        <CheckBox
                            Grid.Row="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            VerticalContentAlignment="Center">
                            <Label Content="Send push notification" />
                        </CheckBox>
                        <CheckBox
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,5"
                            VerticalContentAlignment="Center">
                            <Label Content="Play sound notification" />
                        </CheckBox>
                        <Button
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="0,0,0,5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="Test Volume" />
                        <Label
                            Grid.Row="3"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"
                            Content="99" />
                        <Slider
                            Grid.Row="3"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            IsSnapToTickEnabled="True"
                            Maximum="100"
                            Minimum="1"
                            TickFrequency="1"
                            TickPlacement="None"
                            Value="75" />
                    </Grid>
                </Grid>
            </GroupBox>
            <GroupBox Header="Yellow Threshold">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--  Enable Threshold Checkbox  -->
                    <CheckBox Margin="0,5,0,20" VerticalContentAlignment="Center">
                        <Label Content="Enable Yellow Threshold" />
                    </CheckBox>
                    <!--  Volume Threshold  -->
                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.1*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.ColumnSpan="2"
                            HorizontalContentAlignment="Center"
                            Content="Volume Threshold"
                            FontSize="20"
                            FontWeight="DemiBold" />
                        <Label
                            Grid.Row="1"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"
                            Content="99" />
                        <Slider
                            Grid.Row="1"
                            Grid.Column="1"
                            IsSnapToTickEnabled="True"
                            Maximum="100"
                            Minimum="1"
                            TickFrequency="1"
                            TickPlacement="None"
                            Value="75" />
                    </Grid>
                    <!--  Notification  -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.ColumnSpan="3"
                            HorizontalContentAlignment="Center"
                            Content="Notifications"
                            FontSize="20"
                            FontWeight="DemiBold" />
                        <CheckBox
                            Grid.Row="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            VerticalContentAlignment="Center">
                            <Label Content="Send push notification" />
                        </CheckBox>
                        <CheckBox
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,5"
                            VerticalContentAlignment="Center">
                            <Label Content="Play sound notification" />
                        </CheckBox>
                        <Button
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="0,0,0,5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="Test Volume" />
                        <Label
                            Grid.Row="3"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"
                            Content="99" />
                        <Slider
                            Grid.Row="3"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            IsSnapToTickEnabled="True"
                            Maximum="100"
                            Minimum="1"
                            TickFrequency="1"
                            TickPlacement="None"
                            Value="75" />
                    </Grid>
                </Grid>
            </GroupBox>
            <GroupBox Header="General Settings">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <CheckBox Margin="0,0,0,15" VerticalContentAlignment="Center">
                        <Label Content="Start with system" />
                    </CheckBox>
                    <Label Grid.Row="1" Content="App Locale" />
                    <ComboBox Grid.Row="2" Margin="0,0,0,30">
                        <ComboBoxItem Content="English" />
                        <ComboBoxItem Content="Українська" />
                        <ComboBoxItem Content="Русский" />
                    </ComboBox>
                    <Button
                        Grid.Row="3"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Content="Theme / Sound Settings" />
                </Grid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Window>

<Window
    x:Class="EnweVolume.MVVM.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EnweVolume.MVVM.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:EnweVolume.MVVM.ViewModels"
    Title="EnweVolume Settings"
    Width="500"
    Height="500"
    MinWidth="500"
    MinHeight="500"
    d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
    ResizeMode="CanResize"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            Width="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock FontSize="16" Text="Current Volume:" />
            <TextBlock
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Text="{Binding VolumeCurrentLevel, StringFormat={}{0:P0}}" />
            <ProgressBar
                Height="20"
                Margin="0,10,0,0"
                Maximum="1"
                Value="{Binding VolumeCurrentLevel}" />
        </StackPanel>
    </Grid>
</Window>
